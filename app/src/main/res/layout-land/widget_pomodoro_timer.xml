<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_pomodoro_background"
    android:orientation="horizontal"
    android:padding="20dp"
    android:gravity="center_vertical"
    android:minHeight="100dp">

    <!-- Left - Analog Timer -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:minWidth="100dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_analog_timer_detailed"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />

    </LinearLayout>

    <!-- Center - Digital Timer and Controls -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="16dp"
        android:minWidth="140dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining time"
            android:textColor="#B0B0B0"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center" />

        <TextView
            android:id="@+id/widget_timer_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25:00"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginVertical="6dp"
            android:maxLines="1"
            android:ellipsize="none"
            android:minWidth="90dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/widget_button_background"
                android:src="@drawable/ic_play"
                android:scaleType="centerInside"
                android:padding="7dp"
                android:layout_marginEnd="5dp" />

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/widget_button_background"
                android:src="@drawable/ic_stop"
                android:scaleType="centerInside"
                android:padding="7dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Right - Sleep/Rest Icon and Time -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:minWidth="100dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/home"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/widget_session_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00:00"
            android:textColor="#FF8C42"
            android:textSize="13sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:minWidth="70dp" />

    </LinearLayout>

</LinearLayout>
